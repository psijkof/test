    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
    
        {
            "name": ".NET Core Launch (web) with Hot Reload",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "watch", // Enables Hot Reload by watching for file changes
                "--project",
                "./src/WebApp/WebApp.csproj", // Adjust to your .csproj location
                "--verbose"
            ],
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            },
            "justMyCode": true // Optional: Set to true to debug only your code
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}